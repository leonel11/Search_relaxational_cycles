\headsep=20pt
\headheight=20pt
\footskip=20pt
\renewcommand{\@evenhead}{%
\thepage \hfil \strut \@crauthor \hfil}
\renewcommand{\@oddhead}{%
\hfil \strut \@title \hfil \thepage}
\renewcommand{\@oddfoot}{}
\renewcommand{\@evenfoot}{}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\topmargin=0pt
\textwidth=13truecm
\textheight=21.5truecm
\hoffset=-1truecm
\renewcommand{\baselinestretch}{1.1}
